   "policyRule": {
      "if": {
         "field": "[concat('tags[',parameters('tagName'),']')]",
         "exists": "false"
      },
      "then": {
         "effect": "audit"
      }  
   },
   "properties": {
      "policyType": "Custom",
      "mode": "Indexed",
      "description": "Auditing for required tags"
   }
} 
   
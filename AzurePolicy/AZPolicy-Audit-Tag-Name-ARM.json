{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Authorization/policyDefinitions",
      "name": "Audit \"Tag Name\"",
      "apiVersion": "2019-01-01",
      "properties": {
        "displayName": "Requires \"Tag Name\" tag",
        "policyType": "Custom",
        "mode": "Indexed",
        "description": "Audits all applicable resources to validate if the \"Tag Name\" tag is present.",
        "parameters": {
           "tagName": {
              "type": "String",
              "metadata": {
                 "description": "Name of the tag - \"Tag Name\"",
                 "displayName": "Tag Name"
              }
           }
        },
        "policyRule": {
           "if": {
                "field": "[concat('tags[',parameters('tagName'),']')]",
                "exists": "false"
           },
           "then": {
              "effect": "audit"
           }
        }      
     }
    }
  ],
  "outputs": {}
}
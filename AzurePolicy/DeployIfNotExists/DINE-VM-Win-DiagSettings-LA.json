{
    "mode": "Indexed",
    "policyRule": {
        "if": {
            "allOf": [
                {
                    "field": "type",
                    "equals": "Microsoft.Compute/virtualMachines"
                },
                {
                    "field": "Microsoft.Compute/imagePublisher",
                    "equals": "MicrosoftWindowsServer"
                },
                {
                    "field": "Microsoft.Compute/imageOffer",
                    "equals": "WindowsServer"
                }
            ]
        },
        "then": {
            "effect": "deployIfNotExists",
            "details": {
                "type": "Microsoft.Compute/virtualMachines/extensions",
                "existenceCondition": {
                    "allOf": [
                        {
                            "field": "Microsoft.Compute/virtualMachines/extensions/type",
                            "equals": "MicrosoftMonitoringAgent"
                        },
                        {
                            "field": "Microsoft.Compute/virtualMachines/extensions/publisher",
                            "equals": "Microsoft.EnterpriseCloud.Monitoring"
                        }
                    ]
                },
                "roleDefinitionIds": [
                    "/providers/microsoft.authorization/roleDefinitions/9980e02c-c2be-4d73-94e8-173b1dc7cf3c"
                ],
                "deployment": {
                    "properties": {
                        "mode": "incremental",
                        "template": {
                            "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                            "contentVersion": "1.0.0.0",
                            "parameters": {
                                "vmName": {
                                    "type": "string"
                                },
                                "location": {
                                    "type": "string"
                                },
                                "myWorkspaceId":{
                                    "type": "string"
                                },
                                "myWorkspaceKey":{
                                    "type": "string"
                                }
                            },
                            "resources": [
                                {
                                    "name": "[concat(parameters('vmName'),'/OMSExtension')]",
                                    "type": "Microsoft.Compute/virtualMachines/extensions",
                                    "location": "[parameters('location')]",
                                    "apiVersion": "2019-07-01",
                                    "properties": {
                                        "publisher": "Microsoft.EnterpriseCloud.Monitoring",
                                        "type": "MicrosoftMonitoringAgent",
                                        "typeHandlerVersion": "1.0",
                                        "autoUpgradeMinorVersion": true,
                                        "settings": {
                                            "workspaceId": "[parameters('myWorkspaceId')]"
                                        },
                                        "protectedSettings": {
                                            "workspaceKey": "[parameters('myWorkspaceKey')]"
                                        }
                                    }
                                }
                            ]
                        },
                        "parameters": {
                            "vmName": {
                                "value": "[field('name')]"
                            },
                            "location": {
                                "value": "[field('location')]"
                            },
                            "myWorkspaceId": {
                                "value": "[parameters('myWorkspaceId')]"
                            },
                            "myWorkspaceKey":{
                                "value": "[parameters('myWorkspaceKey')]"
                            }
                        }
                    }
                }
            }
        }
    },
    "parameters": {
        "myWorkspaceId": {
            "type": "String",
            "metadata": {
                "displayName": "Log Analytics Consumer or Workspace ID",
                "description": "This is the Log Analytics Workspace where the VM data will be sent"
            }
        },
        "myWorkspaceKey":{
            "type": "String",
            "metadata": {
                "displayName": "Log Analytics Workspace Key.",
                "description": "This key used to authenticate Windows Servers to the LA Workspace."
            }
        }
    }
}
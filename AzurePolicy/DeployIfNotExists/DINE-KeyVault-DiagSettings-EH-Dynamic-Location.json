{
    "mode": "All",
    "policyRule": {
        "if": {
            "allOf": [
                {
                    "field": "type",
                    "equals": "Microsoft.KeyVault/vaults"
                }
            ]
        },
        "then": {
            "effect": "deployIfNotExists",
            "details": {
                "type": "Microsoft.Insights/diagnosticSettings",
                "name": "[parameters('profileName')]",
                "existenceCondition": {
                    "allOf": [
                        {
                            "field": "Microsoft.Insights/diagnosticSettings/logs.enabled",
                            "matchInsensitively": "[parameters('auditEvent')]"
                        },
                        {
                            "field": "Microsoft.Insights/diagnosticSettings/metrics.enabled",
                            "matchInsensitively": "[parameters('captureMetrics')]"
                        },
                        {
                            "field": "Microsoft.Insights/diagnosticSettings/eventHubAuthorizationRuleId",
                            "like": "*"
                        },
                        {
                            "field": "Microsoft.Insights/diagnosticSettings/eventHubName",
                            "like": "*"
                        }
                    ]
                },
                "roleDefinitionIds": [
                    "/providers/microsoft.authorization/roleDefinitions/f25e0fa2-a7c8-4377-a976-54943a77a395",
                    "/providers/microsoft.authorization/roleDefinitions/f526a384-b230-433a-b45c-95f59c4a2dec",
                    "/providers/microsoft.authorization/roleDefinitions/92aaf0da-9dab-42b6-94a3-d43ce8d16293"
                ],
                "deployment": {
                    "properties": {
                        "mode": "incremental",
                        "template": {
                            "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                            "contentVersion": "1.0.0.0",
                            "parameters": {
                                "kvName": {
                                    "type": "string"
                                },
                                "location": {
                                    "type": "string"
                                },
                                "auditEvent": {
                                    "type": "string"
                                },
                                "captureMetrics": {
                                    "type": "string"
                                },
                                "profileName": {
                                    "type": "string"
                                },
                                "westUsEventHubRuleId": {
                                    "type": "string"
                                },
                                "westUsEventHubName": {
                                    "type": "string"
                                },
                                "centralUsEventHubRuleId": {
                                    "type": "string"
                                },
                                "centralUsEventHubName": {
                                    "type": "string"
                                },
                                "northCentralUsEventHubRuleId": {
                                    "type": "string"
                                },
                                "northCentralUsEventHubName": {
                                    "type": "string"
                                }
                            },
                            "variables": {
                                "westUsEventHub":{
                                    "eventHubName": "[parameters('westUsEventHubName')]",
                                    "eventHubRuleId": "[parameters('westUsEventHubRuleId')]"
                                },
                                "centralUsEventHub": {
                                    "eventHubName": "[parameters('centralUsEventHubName')]",
                                    "eventHubRuleId": "[parameters('centralUsEventHubRuleId')]"
                                },
                                "northCentralUsEventHub": {
                                    "eventHubName": "[parameters('northCentralUsEventHubName')]",
                                    "eventHubRuleId": "[parameters('northCentralUsEventHubRuleId')]"
                                },
                                "eventHub": "[variables(concat(parameters('location'), 'EventHub'))]"
                            },
                            "resources": [
                                {
                                    "type": "Microsoft.KeyVault/vaults/providers/diagnosticSettings",
                                    "apiVersion": "2017-05-01-preview",
                                    "name": "[concat(parameters('kvName'),'/','Microsoft.Insights/',parameters('profileName'))]",
                                    "location": "[parameters('location')]",
                                    "properties": {
                                        "eventHubName": "[variables('eventHub').eventHubName]",
                                        "eventHubAuthorizationRuleId": "[variables('eventHub').eventHubRuleId]",
                                        "logs": [
                                            {
                                                "category": "AuditEvent",
                                                "enabled": "[parameters('auditEvent')]"
                                            }
                                        ],
                                        "metrics": [
                                            {
                                                "category": "AllMetrics",
                                                "enabled": "[parameters('captureMetrics')]"
                                            }
                                        ]
                                    }
                                }
                            ],
                            "outputs": {
                                "policy": {
                                    "type": "string",
                                    "value": "[concat('Configured diagnostic settings to be sent to EventHub ', [variables('eventHub').eventHubName], ' for KeyVault ', parameters('kvName'),'.')]"
                                }
                            }
                        },
                        "parameters": {
                            "location": {
                                "value": "[field('location')]"
                            },
                            "kvName": {
                                "value": "[field('name')]"
                            },
                            "auditEvent": {
                                "value": "[parameters('auditEvent')]"
                            },
                            "captureMetrics": {
                                "value": "[parameters('captureMetrics')]"
                            },
                            "profileName": {
                                "value": "[parameters('profileName')]"
                            },
                            "centralUsEventHubRuleId": {
                                "value": "[parameters('centralUsEventHubRuleId')]"
                            },
                            "centralUsEventHubName": {
                                "value": "[last(split(parameters('centralUsEventHub'),'/'))]"
                            },
                            "northCentralUsEventHubRuleId": {
                                "value": "[parameters('northCentralUsEventHubRuleId')]"
                            },
                            "northCentralUsEventHubName": {
                                "value": "[last(split(parameters('northCentralUsEventHub'),'/'))]"
                            },
                            "westUsEventHubRuleId": {
                                "value": "[parameters('westUsEventHubRuleId')]"
                            },
                            "westUsEventHubName": {
                                "value": "[last(split(parameters('westUsEventHub'),'/'))]"
                            }
                        }
                    }
                }
            }
        }
    },
    "parameters": {
        "profileName": {
            "type": "String",
            "metadata": {
                "displayName": "Profile name",
                "description": "The diagnostic settings profile name"
            },
            "defaultValue": "setbypolicy"
        },
        "westUsEventHub": {
            "type": "string",
            "metadata": {
                "displayName": "West US Event hub where data will be sent to",
                "strongType": "Microsoft.EventHub/Namespaces/EventHubs"
            }
        },
        "westUsEventHubRuleId": {
            "type": "String",
            "metadata": {
                "displayName": "West US Event Hub Authorization Rule Id",
                "description": "The West Event Hub authorization rule Id for Azure Diagnostics. The authorization rule needs to be at Event Hub namespace level. e.g. /subscriptions/{subscription Id}/resourceGroups/{resource group}/providers/Microsoft.EventHub/namespaces/{Event Hub namespace}/authorizationrules/{authorization rule}",
                "strongType": "Microsoft.EventHub/Namespaces/AuthorizationRules",
                "assignPermissions": true
            }
        },
        "centralUsEventHub": {
            "type": "string",
            "metadata": {
                "displayName": "Central US Event hub where data will be sent to",
                "strongType": "Microsoft.EventHub/Namespaces/EventHubs"
            }
        },
        "centralUsEventHubRuleId": {
            "type": "String",
            "metadata": {
                "displayName": "Central US Event Hub Authorization Rule Id",
                "description": "The Central US Event Hub authorization rule Id for Azure Diagnostics. The authorization rule needs to be at Event Hub namespace level. e.g. /subscriptions/{subscription Id}/resourceGroups/{resource group}/providers/Microsoft.EventHub/namespaces/{Event Hub namespace}/authorizationrules/{authorization rule}",
                "strongType": "Microsoft.EventHub/Namespaces/AuthorizationRules",
                "assignPermissions": true
            }
        },
        "northCentralUsEventHub": {
            "type": "string",
            "metadata": {
                "displayName": "North Central US Event hub where data will be sent to",
                "strongType": "Microsoft.EventHub/Namespaces/EventHubs"
            }
        },
        "northCentralUsEventHubRuleId": {
            "type": "String",
            "metadata": {
                "displayName": "North Central US Event Hub Authorization Rule Id",
                "description": "The North Central US Event Hub authorization rule Id for Azure Diagnostics. The authorization rule needs to be at Event Hub namespace level. e.g. /subscriptions/{subscription Id}/resourceGroups/{resource group}/providers/Microsoft.EventHub/namespaces/{Event Hub namespace}/authorizationrules/{authorization rule}",
                "strongType": "Microsoft.EventHub/Namespaces/AuthorizationRules",
                "assignPermissions": true
            }
        },
        "auditEvent": {
            "type": "String",
            "metadata": {
                "displayName": "Audit Events",
                "description": "Whether to stream KeyVault Events to the Event Hub - True or False"
            },
            "allowedValues": [
                "True",
                "False"
            ],
            "defaultValue": "True"
        },
        "captureMetrics": {
            "type": "String",
            "metadata": {
                "displayName": "All Metrics",
                "description": "Whether to stream KeyVault Metrics to the Event Hub  - True or False"
            },
            "allowedValues": [
                "True",
                "False"
            ],
            "defaultValue": "True"
        }
    }
}
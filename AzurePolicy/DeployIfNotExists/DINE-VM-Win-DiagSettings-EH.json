{
    "mode": "Indexed",
    "policyRule": {
        "if": {
            "allOf": [
                {
                    "field": "type",
                    "equals": "Microsoft.Compute/virtualMachines"
                },
                {
                    "field": "Microsoft.Compute/imagePublisher",
                    "equals": "MicrosoftWindowsServer"
                },
                {
                    "field": "Microsoft.Compute/imageOffer",
                    "equals": "WindowsServer"
                }
            ]
        },
        "then": {
            "effect": "deployIfNotExists",
            "details": {
                "type": "Microsoft.Compute/virtualMachines/extensions",
                "existenceCondition": {
                    "allOf": [
                        {
                            "field": "Microsoft.Compute/virtualMachines/extensions/type",
                            "equals": "IaaSDiagnostics"
                        },
                        {
                            "field": "Microsoft.Compute/virtualMachines/extensions/publisher",
                            "equals": "Microsoft.Azure.Diagnostics"
                        }
                    ]
                },
                "roleDefinitionIds": [
                    "/providers/microsoft.authorization/roleDefinitions/9980e02c-c2be-4d73-94e8-173b1dc7cf3c"
                ],
                "deployment": {
                    "properties": {
                        "mode": "incremental",
                        "template": {
                            "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                            "contentVersion": "1.0.0.0",
                            "parameters": {
                                "vmName": {
                                    "type": "string"
                                },
                                "location": {
                                    "type": "string"
                                },
                                "diagStorageAccount":{
                                    "type": "string"
                                },
                                "eventHubName":{
                                    "type": "string"
                                },
                                "EventHubNs":{
                                    "type": "string"
                                },
                                "eventHubRuleId":{
                                    "type": "string"
                                },
                                "eventHubAccessKeyName":{
                                    "type": "string"
                                },
                                "eventHubKey":{
                                    "type": "string"
                                },
                                "storageKey":{
                                    "type": "string"
                                }
                            },
                            "resources": [
                                {
                                    "name": "[concat(parameters('vmName'),'/IaasDiagnostics')]",
                                    "type": "Microsoft.Compute/virtualMachines/extensions",
                                    "location": "[parameters('location')]",
                                    "apiVersion": "2017-12-01",
                                    "properties": {
                                        "publisher": "Microsoft.Azure.Diagnostics",
                                        "type": "IaasDiagnostics",
                                        "typeHandlerVersion": "1.5",
                                        "autoUpgradeMinorVersion": true,
                                        "settings": {
                                            "storageAccount": "[parameters('diagStorageAccount')]",
                                            "WadCfg": {
                                                "DiagnosticMonitorConfiguration": {
                                                    "overallQuotaInMB": 5120,
                                                    "sinks": "[parameters('eventHubName')]",
                                                    "DiagnosticInfrastructureLogs": {
                                                        "scheduledTransferLogLevelFilter": "Verbose"
                                                    },
                                                    "PerformanceCounters": {
                                                        "scheduledTransferPeriod": "PT1M",
                                                        "sinks": "[parameters('eventHubName')]",
                                                        "PerformanceCounterConfiguration": []
                                                    },
                                                    "WindowsEventLog": {
                                                        "scheduledTransferPeriod": "PT1M",
                                                        "sinks": "[parameters('eventHubName')]",
                                                        "scheduledTransferLogLevelFilter": "Information",
                                                        "DataSource": [
                                                            {
                                                                "name": "Application!*[System[(Level = 1 or Level = 2 or Level = 3)]]"
                                                            },
                                                            {
                                                                "name": "Security!*[System[band(Keywords,13510798882111488) and (EventID=4624) and Provider[@Name='Microsoft-Windows-Security-Auditing']]]"
                                                            },
                                                            {
                                                                "name": "System!*[System[(Level = 1 or Level = 2 or Level = 3)]]"
                                                            }
                                                        ]
                                                    },
                                                    "Logs": {
                                                        "scheduledTransferPeriod": "PT1M",
                                                        "scheduledTransferLogLevelFilter": "Information",
                                                        "sinks": "[parameters('eventHubName')]"
                                                    }
                                                },
                                                "SinksConfig": {
                                                    "Sink": [
                                                        {
                                                            "name": "[parameters('eventHubName')]",
                                                            "EventHub": {
                                                                "Url": "[concat('https://',parameters('eventHubNs'),'.servicebus.windows.net/',parameters('eventHubName'))]",
                                                                "SharedAccessKeyName": "[parameters('eventHubAccessKeyName')]"
                                                            }
                                                        }
                                                    ]
                                                }
                                            }
                                        },
                                        "protectedSettings": {
                                            "EventHub": {
                                                "Url": "[concat('https: //',parameters('eventHubNs'),'.servicebus.windows.net/',parameters('eventHubName'))]",
                                                "SharedAccessKeyName": "[parameters('eventHubAccessKeyName')]",
                                                "SharedAccessKey": "[parameters('eventHubKey')]"
                                            },
                                            "storageAccountName": "[parameters('diagStorageAccount')]",
                                            "storageAccountKey": "[parameters('storageKey')]",
                                            "storageAccountEndPoint": "https://core.windows.net/"
                                        }
                                    }
                                }
                            ]
                        },
                        "parameters": {
                            "vmName": {
                                "value": "[field('name')]"
                            },
                            "location": {
                                "value": "[field('location')]"
                            },
                            "diagStorageAccount": {
                                "value": "[parameters('diagStorageAccount')]"
                            },
                            "eventHubName": {
                                "value": "[last(split(parameters('eventHub'),'/'))]"
                            },
                            "EventHubNs":{
                                "value": "[first(skip(split(parameters('eventHubRuleId'),'/'),int('8')))]"
                            },
                            "eventHubRuleId":{
                                "value": "[parameters('eventHubRuleId')]"
                            },
                            "eventHubAccessKeyName":{
                                "value": "[last(split(parameters('eventHubRuleId'),'/'))]"
                            },
                            "eventHubKey":{
                                "value": "[parameters('eventHubKey')]"
                            },
                            "storageKey":{
                                "value": "[parameters('storageKey')]"
                            }
                        }
                    }
                }
            }
        }
    },
    "parameters": {
        "diagStorageAccount":{
            "type": "String",
            "metadata": {
                "displayName": "Diagnostic Storage Account"
            }
        },
        "EventHub": {
            "type": "String",
            "metadata": {
                "displayName": "Event hub where data will be sent to",
                "strongType": "Microsoft.EventHub/Namespaces/EventHubs"
            }
        },
        "eventHubRuleId": {
            "type": "String",
            "metadata": {
                "displayName": "Event Hub Authorization Rule Id",
                "description": "The Event Hub authorization rule Id for Azure Diagnostics. The authorization rule needs to be at Event Hub namespace level. e.g. /subscriptions/{subscription Id}/resourceGroups/{resource group}/providers/Microsoft.EventHub/namespaces/{Event Hub namespace}/authorizationrules/{authorization rule}",
                "strongType": "Microsoft.EventHub/Namespaces/AuthorizationRules",
                "assignPermissions": true
            }
        },
        "eventHubKey":{
            "type": "String",
            "metadata":{
                "displayName": "This the key that is used to authenticate with the EventHub.",
                "description": "This key should only have 'Send' permissions to the the EventHub in case it was to be comprimised"
            }
        },
        "storageKey":{
            "type": "String",
            "metadata": {
                "displayName": "This the key that is used to authenticate with the Storage Account.",
                "description": "This key should only have 'Send' permissions to the the EventHub in case it was to be comprimised"
            }
        }
    }
}
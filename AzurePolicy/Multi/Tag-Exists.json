{
    "mode": "Indexed",
    "policyRule": {
        "if": {
            "field": "[concat('tags[', parameters('tagName'), ']')]",
            "exists": "false"
        },
        "then": {
            "effect": "[parameters('effect')]"
        }  
    },
    "parameters": {
        "tagName": {
            "type": "string",
            "metadata":{
                "displayName": "First required tag"
            }
        },    
        "effect": {
            "type": "String",
            "metadata": {
              "displayName": "Effect",
              "description": "The effect determines what happens when the policy rule is evaluated to match"
            },
            "allowedValues": [
              "Audit",
              "Deny"
            ],
            "defaultValue": "Audit"
          }
    }
}
{
  "mode": "All",
  "policyRule": {
    "if": {
        "allOf":[
          {
              "field": "type",
              "equals": "[parameters('resourceType')]"
          },
          {
            "not": {
              "allOf": [
                {
                  "field": "name",
                  "like": "[concat(parameters('resourceAbbreviation'), '-vm', '*')]"
                },
                {
                  "count": {
                    "value": "[parameters('osType')]",
                    "where": {
                      "value": "[skip(field('name'), 7)]",
                      "like": "[concat(current(), '*')]"
                    }
                  },
                  "greater": 0
                },
                {
                  "count": {
                    "value": "[parameters('regionPrefixAcronyms')]",
                    "where": {
                      "value": "[skip(field('name'), 8)]",
                      "like": "[concat(current(), '*')]"
                    }
                  },
                  "greater": 0
                },
                {                
                  "anyOf" : [
                    {
                      "count": {
                        "value": "[parameters('environmentAcronyms')]",
                        "where": {
                          "value": "[skip(field('name'), 11)]",
                          "like": "[concat(current(), '*')]"
                        }
                      },
                      "greater": 0
                    },
                    {
                      "count": {
                        "value": "[parameters('environmentAcronyms')]",
                        "where": {
                          "value": "[skip(field('name'), 12)]",
                          "like": "[concat(current(), '*')]"
                        }
                      },
                      "greater": 0
                    }

                  ]
                }
              ]
            }
          } 
        ]
    },
    "then": {
        "effect": "[parameters('effect')]"
    }  
  },
  "parameters": {
    "resourceType": {
      "type": "String",
      "metadata": {
        "displayName" : "Resource type",
        "description" : "Resource type to enforce naming pattern.",
        "strongType" : "resourceTypes"
      },
      "defaultValue" : "microsoft.compute/disks"
    },
    "resourceAbbreviation":{
      "type": "String",
      "metadata": {
        "displayName": "Resource type abbreviation",
        "description": "Abbreviation of resource type based upon naming policy"
      },
      "defaultValue": "disk"
    },
    "osType": {
      "type": "Array",
      "metadata": {
        "displayName": "Guest OS Type",
        "description": "The type of guest OS running on the virtual machine(s)"
      },
      "defaultValue": [
        "w",
        "l",
        "u"
      ]
    },
    "regionPrefixAcronyms":{
      "type": "Array",
      "metadata": {
        "displayName": "Acronyms from the naming policy to signify which region the resource resides within",
        "description": "The region the resource resides within"
      },
      "defaultValue": [
        "eus",
        "eus2",
        "cus",
        "ncus"
      ]
    },
    "environmentAcronyms": {
      "type": "Array",
      "metadata": {
        "displayName": "Acronyms from the naming policy to signify which environment the resource resides within",
        "description": "The environment the resource belongs too"
      },
      "defaultValue": [
        "p",
        "d",
        "u",
        "x"
      ]
    },
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "The effect determines what happens when the policy rule is evaluated to match"
      },
      "allowedValues": [
        "Audit",
        "Deny"
      ],
      "defaultValue": "Audit"
    }
  }
}